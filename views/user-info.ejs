<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Info</title>
  </head>
  <body>
    <!DOCTYPE html>
    <html lang="en">
      <head>
        <%- include('./partials/head.ejs') %>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Register</title>
      </head>
      <style>
        .row {
          margin-top: 50px;
          border-radius: 20px;
          background-color: white;
          box-shadow: 0 5px 35px rgba(0, 0, 0, 0.18);
        }
        * {
          color: white;
        }

        section {
          height: 75vh;
        }
      </style>
      <body>
        <%- include('./partials/header.ejs') %>
        <section style="margin-bottom: 50px">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-md-5 pb-4">
                <form action="/user/info" method="post" class="mt-3 pb-3">
                  <h1 class="text-center text-dark">Profile</h1>
                  <div class="mb-3">
                    <label for="name" class="text-dark">Full Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Fullname" />
                  </div>
                  <div class="mb-3">
                    <label for="address" class="text-dark">Address</label>
                    <input class="form-control" type="text" name="address" id="address" placeholder="Address" />
                  </div>
                  <div class="mb-3">
                    <label for="phone" class="text-dark">No. Handphone</label>
                    <input class="form-control" type="number" name="phone" id="phone" placeholder="No. Handphone" />
                  </div>
                  <input class="btn text-light" style="background-color: #48217a" type="submit" value="Submit" />
                  <a class="btn text-light" style="background-color: #48217a" href="/" role="button">Cancel</a>
                </form>
              </div>
            </div>
          </div>
        </section>
        <%- include('./partials/footer.ejs') %>
      </body>
    </html>
  </body>
</html>
