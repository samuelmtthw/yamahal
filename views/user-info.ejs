    <!DOCTYPE html>
    <html lang="en">
      <head>
        <%- include('./partials/head.ejs') %>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Register</title>
      </head>
      <style>
        .row {
          margin-top: 50px;
          border-radius: 20px;
          background-color: #48217a;
          box-shadow: 8px 15px 20px -5px rgba(143, 139, 139, 0.75);
          -webkit-box-shadow: 8px 15px 20px -5px rgba(143, 139, 139, 0.75);
          -moz-box-shadow: 8px 15px 20px -5px rgba(143, 139, 139, 0.75);
        }
        * {
          color: white;
        }
      </style>
      <body>
        <!-- form action='/register' method='post' -->
        <!-- username
    email
    password
    name
    address
    phone -->
        <section">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-md-5">
                <form action="/user/info" method="post" class="mt-3 pb-3">
                  <h1 class="text-center">Profile</h1>
                  <div class="mb-3">
                    <label for="name">Full Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Fullname" />
                  </div>
                  <div class="mb-3">
                    <label for="address">Address</label>
                    <input class="form-control" type="text" name="address" id="address" placeholder="Address" />
                  </div>
                  <div class="mb-3">
                    <label for="phone">No. Handphone</label>
                    <input class="form-control" type="number" name="phone" id="phone" placeholder="No. Handphone" />
                  </div>
                  <input class="btn btn-dark" type="submit" value="Submit" />
                  <a class="btn btn-dark" href="/" role="button">Cancel</a>
                </form>
              </div>
            </div>
          </div>
        </section>
      </body>
    </html>
  </body>
