<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
  </head>
  <style>
    .row {
      margin-top: 50px;
      border-radius: 30px;
      background-color: #48217a;
      box-shadow: 8px 15px 20px -5px rgba(143, 139, 139, 0.75);
      -webkit-box-shadow: 8px 15px 20px -5px rgba(143, 139, 139, 0.75);
      -moz-box-shadow: 8px 15px 20px -5px rgba(143, 139, 139, 0.75);
    }
    * {
      color: white;
    }
  </style>
  <body>
    <!-- form action='/register' method='post' -->
    <!-- username
    email
    password
    name
    address
    phone -->
    <section>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-7">
            <form action="/register" method="post" class="mt-5 pb-3">
              <h1 class="text-center">Login</h1>
              <div class="mb-3">
                <label for="username">Username</label>
                <input class="form-control" type="text" name="username" id="username" />
              </div>
              <div class="mb-3">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" />
              </div>
              <button class="btn btn-primary" type="button">Log in</button>
              <p class="mt-3">Not have account? <a href="/">Register Here</a></p>
            </form>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
