<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales</title>
</head>
<body>
  <%- include('./partials/header.ejs') %>
  <div class="display">
    <h1 class="title">Sales</h1>
    <div class="items">
      <% products.forEach(el => { %> 
      <div class="card" data-aos="fade-up">
        <span class="name"><%= el.name %></span>
        <span class="price">â‚¬ <%= el.price %></span> 
        <img src="<%= el.imageUrl %> " alt="<%= el.name %>">
        <% if(el.UserId){ %> 
          <a  class="details" style="background-color: red;" disabled>Sold</a>
          <% } else { %> 
            <a class="details" style="background-color: green;" disabled>Available</a>
        <% } %> 
        <br>
        <a href="/products/<%= el.id %>/delete" class="details">Delete</a>
      </div>
      <% })%> 
    </div>
  </div>
  <%- include('./partials/footer.ejs') %>
  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <script>AOS.init()</script>
</body>
</html>